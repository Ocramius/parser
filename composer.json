{
    "name": "hyper/hyper",
    "license": "MIT",
    "type": "library",
    "description": "PHP DataMapper Layer",
    "homepage": "https://github.com/hyper-php",
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru",
            "role": "maintainer"
        }
    ],
    "repositories": [
        {"type": "path", "url": "libs/hydrator"},
        {"type": "path", "url": "libs/parser"},
        {"type": "path", "url": "libs/types"},
        {"type": "path", "url": "libs/types-dsl"},
        {"type": "path", "url": "libs/types-repository"}
    ],
    "require": {
        "php": "^8.1",
        "hyper/hydrator": "^1.0",
        "hyper/parser": "^1.0",
        "hyper/types": "^1.0",
        "hyper/types-dsl": "^1.0",
        "hyper/types-repository": "^1.0"
    },
    "require-dev": {
        "extended-type-system/type": "^0.1",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phplrt/phplrt": "^3.2",
        "rector/rector": "^0.15",
        "ffi/var-dumper": "^1.0",
        "phpunit/phpunit": "^10.0",
        "vimeo/psalm": "^5.7"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "Hyper\\Hydrator\\Tests\\": "libs/hydrator/tests",
            "Hyper\\Parser\\Tests\\": "libs/parser/tests",
            "Hyper\\Type\\Tests\\": "libs/types/tests",
            "Hyper\\Type\\DSL\\Tests\\": "libs/types-dsl/tests",
            "Hyper\\Type\\Repository\\Tests\\": "libs/types-repository/tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "psalm": "psalm --no-cache",
        "psalm:fix": "psalm --no-cache --alter",
        "phpcs": "rector --dry-run --config=rector.php",
        "phpcs:fix": "rector --config=rector.php"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
